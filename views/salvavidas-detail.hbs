<h1>Salvavidas detail</h1>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">{{project.title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{project.zone}}</h6>
    <p class="card-text">{{project.description}}</p>
  </div>
</div>
{{author.username}}

<div class="col-6">
  <form action="/salvavidas/{{project._id}}" method="POST">
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Escribele un mensaje</label>
      <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      Enviar mensaje
    </button>
  </form>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Mensaje enviado</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
        <img src="https://image.flaticon.com/icons/svg/190/190411.svg" class="img-fluid" alt="Responsive image" style="width: 30%; margin-bottom: 5%;">
         <p>Tu mensaje ha sido enviado correctamente.</p>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Entendido</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>



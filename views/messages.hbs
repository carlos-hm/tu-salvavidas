<section class="sectionprojects">
  <div class="container">
    <h1>Mensajes de Salvavidas</h1>
    <div class="row mbr-justify-content-center">
        {{#each messages}}
          <div class="col-lg-6 mbr-col-md-10">
            <div class="wrap wrap-hover-message">
              <div class="text-wrap vcenter">
                <h5 class="card-title">{{this.workerName}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">en: {{this.projectTitle}}</h6>
                <p class="card-text">{{this.description}}</p>
                <h6 class="card-subtitle mb-2 text-muted">cel. {{this.workerPhone}}</h6>
                <a href="/user/messages/{{this._id}}" class="card-link">Eliminar</a>
              </div>
            </div>
          </div>
       {{/each}}
    </div>  
  </div>
</section>

